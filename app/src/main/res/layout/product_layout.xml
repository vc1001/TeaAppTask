<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4F2A9">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/products1"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/RoundedSquare"
        android:id="@+id/image2"/>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:src="@drawable/star4"
        android:id="@+id/rating"
        android:layout_below="@id/image2"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rating"
        android:text="FrenchTea"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="#400303"
        android:id="@+id/productname"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productname"
        android:orientation="horizontal"
        android:layout_weight="1" >
     <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/baseline_currency_rupee_24"
            android:text="500.0"
            android:textSize="20dp"
            android:padding="10dp"
         android:id="@+id/price"
         android:textColor="#220A0A"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_add_shopping_cart_24"
            android:text="Add to Cart"
            android:textSize="20dp"
            android:layout_marginEnd="40dp"
            android:layout_weight="0.4"
            android:textColor="#077704"/>


    </LinearLayout>



</RelativeLayout>