<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#BAB86C"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativelayout">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/leaf" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hand made Tea Set"
            android:textSize="26sp"
            android:layout_marginTop="150dp"
            android:id="@+id/text"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Organic Tea House"
            android:textSize="40sp"
            android:id="@+id/text1"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_below="@id/text"
            android:layout_marginTop="0dp"
            android:textColor="@android:color/holo_orange_dark"/>


        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/leaves"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/teapot"
            android:layout_marginTop="300dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageView1" />
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/outlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:text="Shop Now" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:background="#BAB86C"
        app:itemIconTint="@drawable/selector_layout"
        app:itemTextColor="@drawable/selector_layout"
        app:menu="@menu/menu_res"/>


</RelativeLayout>